
class Solution {
    public ListNode deleteDuplicates(ListNode head) {
        ListNode tHead = new ListNode(0);
        ListNode pos = tHead, p = head, prev = null;
        
        while(p != null) {
            if(prev == null || prev.val != p.val) {
                pos.next = p;
                pos = pos.next;
            }
            prev = p;
            p = p.next;
        }
        pos.next = null;
        return tHead.next;
    }
}
