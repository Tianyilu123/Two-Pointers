
class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int len = gas.length, count = 0, start = len, end = 0;
        while(end < start) {
            if(count >= 0) {
                count += gas[end] - cost[end];
                end++;
            } else {
                start--;
                count += gas[start] - cost[start];
            }
        }
        return count >= 0 ? ((start == len) ? 0 : start) : -1;
    }
}
