
class Solution {
    public int[] twoSum(int[] nums, int target) {
        HashMap<Integer, Integer> map = new HashMap<>();
        int len = nums.length;
        
        for(int i=0; i<len;  i++) {
            int val = target - nums[i];
            if(map.containsKey(val)) {
                return new int[]{map.get(val), i};
            } else {
                map.put(nums[i], i);
            }
        }
        return null;
    }
}
